                        <a href="MisClientes/FichaCliente/@item.idCliente" class="btn btn-secondary btn-sm">Ficha</a>
                        <button @onclick="@( () =>BorrarCliente(item.idCliente))" class="btn btn-danger btn-sm">Borrar</button>
                    </td>
                </tr>    
            }
        </table>
    </div>
</div>



