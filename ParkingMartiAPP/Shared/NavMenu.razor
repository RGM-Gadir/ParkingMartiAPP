                @if (!@IconMenuActive)
                {
                    <label>Proveedores</label>
                }
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="MisProformas">
                <span class="oi oi-document" aria-hidden="true"></span>
                @if (!@IconMenuActive)
